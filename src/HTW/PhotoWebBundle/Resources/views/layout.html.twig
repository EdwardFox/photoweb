{% extends '::base.html.twig' %}

{% block body %}
    <div class="contain-to-grid">
        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <li class="name">
                    <h1><a href="{{ path('htw_photoweb_homepage') }}">Photoweb</a></h1>
                </li>
                <li class="toggle-topbar menu-icon"><a href=""><span>Menu</span></a></li>
            </ul>

            <section class="top-bar-section">
                <!-- Left Nav Section -->
                <ul class="left">
                        <li{% if app.request.attributes.get('_route') == 'htw_photoweb_homepage' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_homepage') }}">Home</a></li>
                        <li{% if app.request.attributes.get('_route') == 'htw_photoweb_user_list' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_user_list') }}">Users</a></li>
                        <li{% if app.request.attributes.get('_route') == 'htw_photoweb_staticpage_about' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_staticpage_about') }}">About</a></li>
                        <li{% if app.request.attributes.get('_route') == 'htw_photoweb_staticpage_contact' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_staticpage_contact') }}">Contact</a></li>
                </ul>

                 <!-- Right Nav Section -->
                <ul class="right">                    
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li{% if app.request.attributes.get('_route') == 'htw_photoweb_myarea_index' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_myarea_index') }}">My area</a></li>
                                <li>    
                                    <a href="{{ path('fos_user_security_logout') }}">
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                                </li>
                        {% else %}
                                <li><a class="login-button" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                                <li><a class="register-button" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                        {% endif %}
                </ul>
            </section>
        </nav>
    </div>

    <div class="row">
        <div class="large-12 columns">{% block content %}{% endblock content %}</div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        'bundles/htwphotoweb/js/thirdparty/jquery.js'
        'bundles/htwphotoweb/js/thirdparty/foundation/foundation.js'
        'bundles/htwphotoweb/js/thirdparty/foundation/foundation.topbar.js'
        'bundles/htwphotoweb/js/thirdparty/*'
        'bundles/htwphotoweb/js/*' output='js/compiled/main.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {% stylesheets
        'bundles/htwphotoweb/css/style.css' filter='cssrewrite' output='css/compiled/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}