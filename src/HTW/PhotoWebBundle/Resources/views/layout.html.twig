{% extends '::base.html.twig' %}

{% block body %}
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ path('htw_photoweb_homepage') }}">Photoweb</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li{% if app.request.attributes.get('_route') == 'htw_photoweb_homepage' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_homepage') }}">Home</a></li>
					<li{% if app.request.attributes.get('_route') == 'htw_photoweb_user_list' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_user_list') }}">Users</a></li>
					<li{% if app.request.attributes.get('_route') == 'htw_photoweb_staticpage_about' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_staticpage_about') }}">About</a></li>
					<li{% if app.request.attributes.get('_route') == 'htw_photoweb_staticpage_contact' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_staticpage_contact') }}">Contact</a></li>
				</ul>

				<ul class="nav navbar-nav navbar-right">				    
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					    <li{% if app.request.attributes.get('_route') == 'htw_photoweb_myarea_index' %} class="active"{% endif %}><a href="{{ path('htw_photoweb_myarea_index') }}">My area</a></li>
				        <li>    
					        <a href="{{ path('fos_user_security_logout') }}">
					            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
					        </a>
				        </li>
				    {% else %}
				        <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
				        <li><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
				    {% endif %}
				</ul>
			</div>
		</div>
	</div>

	<div class="container">
			{% block content %}{% endblock content %}
	</div>
{% endblock %}

{% block javascripts %}
	{% javascripts
		'bundles/htwphotoweb/js/thirdparty/jquery.js'
		'bundles/htwphotoweb/js/thirdparty/bootstrap.js'
		'bundles/htwphotoweb/js/thirdparty/*'
		'bundles/htwphotoweb/js/*' output='js/compiled/main.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
	{% stylesheets 'bundles/htwphotoweb/css/*' filter='cssrewrite' output='css/compiled/main.css' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}